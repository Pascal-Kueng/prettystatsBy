citHeader("Don't forget to also cite the psych package.",
          "To cite prettystatsBy in publications use:")

note <- sprintf("R package version %s", meta$Version)


bibentry(bibtype = "Manual",
         title = "PrettystatsBy: Extending the 'statsBy' Functionality of the Pych Package",
         author = c(person("Pascal", "Küng")),
         year = "2023",
         note = note,
	 url = "https://github.com/Pascal-Kueng/prettystatsBy")

 textVersion = paste0("Pascal Küng, (2023). PrettystatsBy: Extending the 'statsBy' Functionality of the Psych Package. ",
  note, ". https://github.com/Pascal-Kueng/prettystatsBy"
  )
